@using Microsoft.AspNetCore.Components.Authorization
@using YSocial.Components.Services
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="auth-buttons">
                @if (isAuthenticated)
                {
                    <a href="/profile" class="profile-button">Профиль</a>
                    <a href="#" class="profile-button" @onclick="Logout">Выйти</a>
                }
                else
                {
                    <a href="/login" class="auth-button">Sign In</a>
                    <a href="/register" class="auth-button">Sign Up</a>
                }
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
    }

    private async Task Logout()
    {
        if (AuthStateProvider is CustomAuthStateProvider customProvider)
        {
            await customProvider.SignOutAsync();
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    }
}